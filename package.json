{
  "name": "@triptease-paid-search/http4js",
  "version": "7.0.3",
  "description": "A lightweight HTTP toolkit",
  "type": "module",
  "types": "./dist/cjs/index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "engines": {
    "node": ">=20.10.0 <23",
    "yarn": "1.x.x",
    "npm": "yarn"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./core/*": {
      "import": "./dist/esm/core/*",
      "require": "./dist/cjs/core/*"
    },
    "./client/*": {
      "import": "./dist/esm/client/*",
      "require": "./dist/cjs/client/*"
    },
    "./servers/*": {
      "import": "./dist/esm/servers/*",
      "require": "./dist/cjs/servers/*"
    },
    "./zipkin/*": {
      "import": "./dist/esm/zipkin/*",
      "require": "./dist/cjs/zipkin/*"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "yarn run build:esm && yarn run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json && echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "prebuild": "rm -rf dist",
    "test": "vitest",
    "start": "ts-node src/main/index.ts",
    "artifactregistry-login": "npx google-artifactregistry-auth"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/http4js/http4js.git"
  },
  "author": "Tom Shacham",
  "license": "ISC",
  "keywords": [
    "http",
    "Server as a Function"
  ],
  "devDependencies": {
    "@types/mocha": "*",
    "@types/node": "^20.0.10",
    "mocha": "^11.7.2",
    "ssl-root-cas": "^1.3.1",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
